@model LojaVirtual.Models.Categoria
@{
    ViewData["Title"] = "Cadastrar";

}


<h1>Cadastrar</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome da categoria">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <input asp-for="Slug" type="text"  class="form-control" placeholder="Digite o slug da categoria">
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label  asp-for="CategoriaPaiId">Categoria Pai ID</label>
        <input asp-for="CategoriaPaiId" type="text"  class="form-control" placeholder="Digite o ID da categoria Pai">
        <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Back</a>
</form>